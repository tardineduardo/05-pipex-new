	"version": "0.2.0",
	"configurations": [
		{
			"name": "(gdb) Launch",
			"type": "cppdbg",
			"request": "launch",
			"program": "/home/eduardo/Documentos/repos/05-pipex-new/pipex",
			"args": ["Makefile", "wc", "wccc", "ls", "out.txt"],
			"stopAtEntry": false,
			"cwd": "/home/eduardo/Documentos/repos/05-pipex-new",
			"environment": [],
			"externalConsole": false,
			"MIMode": "gdb",
			"setupCommands": [
				{
					"description": "Enable pretty-printing for gdb",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				},
				{
					"description": "Set follow-fork-mode to parent",
					"text": "-gdb-set follow-fork-mode parent",
					"ignoreFailures": false
				},
				{
					"description": "Set detach-on-fork off",
					"text": "-gdb-set detach-on-fork off",
					"ignoreFailures": false
				},
				{
					"description": "Set Disassembly Flavor to Intel",
					"text": "-gdb-set disassembly-flavor intel",
					"ignoreFailures": true
				}
			]
		}

	]
}